    <div class="container">
      <div id="section1" class="container-fluid" >
        <h1 style="text-align: left;"> Eliminar paciente </h1>
        <hr>
        <div class="row">
            <!-- edit form column -->
            <div class="text-center">
                <h2> Seleccione el paciente a eliminar: </h2>
                <h4> (Verifique si los datos son del paciente correcto)</h4>
                <div class="form-group">
                  <label class="col-lg-4 control-label"></label>
                  <div class="col-lg-4">
                    <select id="combo-pacientes" class="form-control" name="centroMedico" required="true" onchange="llenarInputs();">
                     <option value="" disabled selected>-- Escoja un paciente --</option>
                    </select>
                  </div>
                  <div class="col-lg-4"></div>
                </div>

            </div>
            
            <br>
            <br>
            <div class="infoPerfil"  style="align-self: center;">
              <form class="form-horizontal" role="form" id="deletePaciente">
                <div class="form-group">
                  <label class="col-lg-4 control-label">Nombres: </label>
                  <div class="col-lg-7">
                    <input id="inputNombres" name="nombres" class="form-control" type="text" placeholder="Ingrese su nombre" required="true" disabled="true">
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-lg-4 control-label">Apellidos: </label>
                  <div class="col-lg-7">
                    <input id="inputApellidos" name="apellidos" class="form-control" type="text" placeholder="Ingrese su apellido" required="true" disabled="true">
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-lg-4 control-label">C&eacute;dula:</label>
                  <div class="col-lg-7">
                    <input id="inputCedula" name="cedula" class="form-control" onkeypress="return event.charCode >= 48 && event.charCode <= 57" type="text" placeholder="Ingrese su n&uacute;mero de c&eacute;dula" required="true" disabled="true">
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-lg-4 control-label">Correo electr&oacute;nico:</label>
                  <div class="col-lg-7">
                    <input id="inputCorreo" name="email" class="form-control" type="email" placeholder="Ingrese su correo electr&oacute;nico" required="true" disabled="true">
                  </div>
                </div>
                <br>
                <div class="form-group">
                  <div class="col-lg-11 text-center">
                    <input id="btnEliminar" type="submit" class="btn btn-primary" value="Eliminar" disabled="true">
                    <input type="button" class="btn btn-default" value="Cancelar" onclick="cancelarRegistroPaciente();">
                  </div>
                </div>
                <br><br>

              </form>
            </div>
        </div>
    </div>
  </div>

   <script>
        $("#deletePaciente").submit(function(e){
            e.preventDefault();
            var id = $("#combo-pacientes").val();
            var url = "/pacientes/"+id;
            var data = $("#deletePaciente").serialize();
            $.ajax({
                type: 'DELETE',
                url: url,
                data: data, //+'&'+$.param({tipoaccion:"insertar"}),
                success: function(respuesta){
                    alert("Eliminado con exito");
                    window.location = "/operario";
                }
            });
        });
  </script>

