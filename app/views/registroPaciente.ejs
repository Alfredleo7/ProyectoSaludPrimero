      </div>
      <div class="collapse navbar-collapse" id="pacienteBar">
          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a href="/operario/registroPaciente"><i class="glyphicon glyphicon-user"></i> Administrar pacientes </a>
            </li> 

            <li class="dropdown">
              <a href="/operario/editarMuestra"><i class="glyphicon glyphicon-duplicate"></i> Administrar muestras </a>
            </li> 

            <li><a href="/operario/estadisticas"><i class="glyphicon glyphicon-picture"></i> Estad&iacute;sticas</a></li>
            
            <li><a href="/operario/logout"><i class="glyphicon glyphicon-off"></i> Salir</a></li>
          </ul>
      </div>
    </div>
  </nav>

    <div class="container">
    	<div id="section1" class="container-fluid" >
        <h1 style="text-align: left;"> Pacientes registrados </h1>
        <button class='btn btn-primary' data-toggle='modal' data-target='#new' data-backdrop='static' data-keyboard='false'>Agregar paciente</button>
        <hr>
        <input class="hidden" id="codpaciente_hidden"></input>
        <div class="datatable table-responsive">
            <table id="example" class="display" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th data-priority="1">Nombres</th>
                            <th data-priority="2">Apellidos</th>
                            <th data-priority="3">Cedula</th>
                            <th data-priority="4">Email</th>
                            <th data-priority="3" class='text-center'>Editar</th>
                            <th data-priority="4" class='text-center'>Borrar</th>
                        </tr>
                    </thead>
            </table>

<!-- ========================================= -->
              <div class="modal fade" id="new" tabindex="-1" role="dialog" aria-labelledby="new" aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h4 class="modal-title custom_align" id="Heading">Datos del paciente</h4>
                    </div>

                    <div class="modal-body">
                      <form role="form" id="addPaciente">
                       <div class="form-group">
                          <div class="col-md-4">
                            <label class="control-label">Nombres: </label>
                          </div>
                          <div class="col-md-8">
                            <input id="inputNombres" name="nombres" class="form-control" type="text" placeholder="Ingrese su nombre" required="true">
                          </div>
                        </div>
                        <br>
                        <div class="form-group">
                          <div class="col-md-4">
                            <label class="control-label">Apellidos: </label>
                          </div>
                          <div class="col-md-8">
                            <input id="inputApellidos" name="apellidos" class="form-control" type="text" placeholder="Ingrese su apellido" required="true">
                          </div>
                        </div>
                        <br>
                        <div class="form-group">
                          <div class="col-md-4">
                            <label class="control-label">C&eacute;dula:</label>
                          </div>
                          <div class="col-md-8">
                            <input id="inputCedula" name="cedula" class="form-control" onkeypress="return event.charCode >= 48 && event.charCode <= 57" type="text" placeholder="Ingrese su n&uacute;mero de c&eacute;dula" required="true">
                          </div>
                        </div>
                        <br>
                        <div class="form-group">
                          <div class="col-md-4">
                            <label class="control-label">Correo electr&oacute;nico:</label>
                          </div>
                          <div class="col-md-8">
                            <input id="inputCorreo" name="email" class="form-control" type="email" placeholder="Ingrese su correo electr&oacute;nico" required="true">
                          </div>
                        </div>
                        <br>
                        <input type="submit" id="submitNew" class="btn btn-primary pull-right" value="Crear">
                        <input type="reset" id="reset" class="btn btn-default pull-right" value="Cancelar" data-dismiss="modal" onclick="resetModal('new');">
                      </form>
                    </div>
                        
                    <div class="modal-footer ">
                    </div>

                  </div>
                </div>
              </div>
<!-- ========================================= -->
              <div class="modal fade" id="edit" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h4 class="modal-title custom_align" id="Heading">Datos del paciente</h4>
                    </div>

                    <div class="modal-body">

                      <form role="form" id="editPaciente">
                       <input type="hidden" id="editHidden">
                       <div class="form-group">
                            <div class="col-md-4">
                              <label class="control-label">Nombres: </label>
                            </div>
                            <div class="col-md-8">
                              <input id="editNombres" name="nombres" class="form-control" type="text" placeholder="Ingrese su nombre" required="true">
                            </div>
                        </div>
                        <br>
                        <div class="form-group">
                            <div class="col-md-4">
                                <label class="control-label">Apellidos: </label>
                            </div>
                            <div class="col-md-8">
                                <input id="editApellidos" name="apellidos" class="form-control" type="text" placeholder="Ingrese su apellido" required="true">
                            </div>
                        </div>
                        <br>
                        <div class="form-group">
                            <div class="col-md-4">
                              <label class="control-label">C&eacute;dula:</label>
                            </div>
                            <div class="col-md-8">
                              <input id="editCedula" name="cedula" class="form-control" onkeypress="return event.charCode >= 48 && event.charCode <= 57" type="text" placeholder="Ingrese su n&uacute;mero de c&eacute;dula" required="true">
                            </div>
                        </div>
                        <br>
                        <div class="form-group">
                            <div class="col-md-4">
                              <label class="control-label">Correo electr&oacute;nico:</label>
                            </div>
                            <div class="col-md-8">
                              <input id="editCorreo" name="email" class="form-control" type="email" placeholder="Ingrese su correo electr&oacute;nico" required="true">
                            </div>
                        </div>
                        <br>
                        <input id="submitEdit" type="submit" class="btn btn-primary pull-right" value="Guardar">
                        <input type="reset" class="btn btn-default pull-right" value="Cancelar" data-dismiss="modal">

                      </form>
                    </div>
                    
                    <div class="modal-footer">
                    </div>

                  </div>
                </div>
              </div>

            <!-- Segundo Modal -->
            <div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h4 class="modal-title custom_align" id="Heading">Eliminar muestra</h4>
                  </div>
                  <div class="modal-body">
                  <form>
                    <input type="hidden" id="hiddenSuccess">
                    <div class="alert alert-danger"><span class="glyphicon glyphicon-warning-sign"></span>  ¿Est&aacute;s seguro que quieres eliminar este paciente?</div>
                      <button type="button" id="confirmDelete" class="btn btn-success" ><span class="glyphicon glyphicon-ok-sign" onclick="confirmarEliminar();"></span> Si, estoy seguro </button>
                      <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span>No borrar este paciente</button>
                   </form>
                  </div>

                  <div class="modal-footer "></div>
                </div>
              </div>
            </div>
        
       <!--Success Modal Templates-->
          <div id="modal-success" class="modal modal-message modal-success fade" style="display: none;" aria-hidden="true">
              <div class="modal-dialog">
                  <div class="modal-content">
                      <div class="modal-header text-center" style="color: #53a93f; border-bottom: 3px solid #a0d468;">
                          <i class="glyphicon glyphicon-check"></i>
                          <p> ¡Realizado con exito! </p>
                      </div>
                      <div class="modal-title" style="padding: 0 20px; text-align: center!important;">  </div>
                      <div class="modal-body"> La operacion se ha llevado a cabo correctamente </div>
                      <div class="modal-footer">
                          <button type="button" class="btn btn-success" data-dismiss="modal" onClick="window.location.reload();">OK</button>
                      </div>
                  </div> <!-- / .modal-content -->
              </div> <!-- / .modal-dialog -->
          </div>

        </div> <!-- Fin DataTables -->

    </div>
  </div>

  <footer class="pie">
    &copy; Todos los derechos reservados. 2016
  </footer>
  
  <script src="https://cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/1.10.12/js/dataTables.bootstrap.min.js"></script>
  <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.12/css/dataTables.bootstrap.min.css">

  <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css">
  <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/1.2.1/css/buttons.dataTables.min.css">
  <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/select/1.2.0/css/select.dataTables.min.css">
  
  <script>
        $("#addPaciente").submit(function(e){
            e.preventDefault();
            var url = "/pacientes";
            var data = $("#addPaciente").serialize();
            $.ajax({
                type: 'POST',
                url: url,
                data: data, //+'&'+$.param({tipoaccion:"insertar"}),
                success: function(respuesta){
                    $("#new").modal("hide");
                    $("#modal-success").modal("show");
                }
            });
        });
// ==============================================
        $("#editPaciente").submit(function(e){
            e.preventDefault();
            var url = '';
            var i = $("#editHidden").val();
            var url = '/pacientes/'+i;            
            var data = $("#editPaciente").serialize();
            $.ajax({
                type: 'PUT',
                url: url,
                data: data,
                success: function(respuesta){
                    $("#modal-success").modal("show");
                    $("#edit").modal("hide");
                }
            });
        });
// ==============================================
        $("#delete").submit(function(e){
            e.preventDefault();
        });
  </script>

</body>
</html>