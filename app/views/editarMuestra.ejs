    <div class="container">
    	<div id="section1" class="container-fluid" >
        
        <h1 style="text-align: left;"> Muestras registradas </h1>
        
        <button class='btn btn-primary' data-toggle='modal' data-target='#edit' >Agregar muestra</button>
        <hr>
        <input class="hidden" id="codmuestra_hidden"></input>
        <div class="datatable">
            <table id="example" class="display" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th data-priority="1">Nombres</th>
                            <th data-priority="2">Apellidos</th>
                            <th data-priority="6">Centro Med.</th>
                            <th data-priority="5">Laboratorio</th>
                            <th data-priority="8">Examenes</th>
                            <th data-priority="8">Tipo</th>
                            <th data-priority="8">Editar</th>
                            <th data-priority="8">Eliminar</th>
                        </tr>
                    </thead>
            </table>

              <div class="modal fade" id="edit" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                      <h4 class="modal-title custom_align" id="Heading">Datos de la Muestra</h4>
                    </div>
                    <div class="modal-body">
                    <form>
                       <input type="hidden" id="editHidden">
                       <div class="form-group text-center">
                            <label class="control-label">Seleccione un paciente: </label>
                            <select id="combo-pacientes" class="form-control" name="paciente" required>
                              <option value="" disabled selected>-- Escoja un paciente de la lista o en su defecto cree uno --</option>
                            </select>
                            <br>
                            <input type="button" name="nuevoPaciente" class="btn btn-primary" value="Nuevo paciente" onclick="location.href='/operario/registroPaciente'" >
                        </div>

                        <div class="form-group text-center">
                            <label class="control-label">Centro m&eacute;dico: </label>
                            <select id="combo-centros" class="form-control" name="centroMedico" required>
                             <option value="" disabled selected>-- Escoja un centro m&eacute;dico --</option>
                            </select>
                        </div>

                        <div class="form-group text-center">
                            <label class="control-label">Laboratorio donde se enviar&aacute;: </label>
                            <select id="combo-lab" class="form-control" name="laboratorio" required>
                              <option value="" disabled selected>-- Escoja un laboratorio --</option>
                            </select>
                        </div>

                        <div class="form-group text-center">
                            <label class="control-label">Muestra recogida: </label>
                            <select id="combo-muestras" class="form-control" name="tipoMuestra" required>
                              <option value="none" disabled selected>-- Escoja un tipo de muestra --</option>
                              <option value="sangre"> Muestra de sangre </option>
                              <option value="heces"> Muestra de heces </option>
                              <option value="orina"> Muestra de orina </option>
                            </select>
                        </div>

                        <div class="form-group text-center">
                            <label class="control-label">
                              <p>Ex&aacute;menes a realizar:</p>
                              <p style="font-size: 0.8em;">** Mantenga presionado Ctrl (Windows)/Command(Mac) para seleccionar m&aacute;s de una opcion</p>
                            </label>
                            <select id="select-examenes" class="form-control" name="examenes" multiple="true" style="height: 110px;" required>
                            </select>
                        </div>

                        <!-- Input hidden -->
                        <div class="form-group">
                          <input type="hidden" name="estado" value="Ingresado">
                        </div>
                        <input id="submitEdit" type="submit" class="btn btn-primary" value="Guardar">
                        <input type="reset" class="btn btn-default" value="Cancelar" data-dismiss="modal">
                      </form>
                    </div>

                  </div>
                </div>
              </div>

            <!-- Segundo Modal -->
            <div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                    <h4 class="modal-title custom_align" id="Heading">Eliminar muestra</h4>
                  </div>
                  <div class="modal-body">
                  <form>
                   <input type="hidden" id="hiddenSuccess">
                   <div class="alert alert-danger"><span class="glyphicon glyphicon-warning-sign"></span>  ¿Est&aacute;s seguro que quieres eliminar esta muestra?</div>
                    <button type="button" class="btn btn-success" ><span class="glyphicon glyphicon-ok-sign" onclick="confirmarEliminar();"></span> Si, estoy seguro </button>
                    <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> No borrar esta muestra </button>
                  </form>
                  </div>
                </div>
              </div>
            </div>
        
        
         <!--Success Modal Templates-->
            <div id="modal-success" class="modal modal-message modal-success fade" style="display: none;" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header text-center" style="color: #53a93f; border-bottom: 3px solid #a0d468;">
                            <i class="glyphicon glyphicon-check"></i>
                            <p> ¡Realizado con exito! </p>
                        </div>
                        <div class="modal-title" style="padding: 0 20px; text-align: center!important;">  </div>
                        <div class="modal-body"> La operacion se ha llevado a cabo correctamente </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-success" data-dismiss="modal" onClick="window.location.reload();">OK</button>
                        </div>
                    </div> <!-- / .modal-content -->
                </div> <!-- / .modal-dialog -->
            </div>


        </div> <!-- Fin DataTables -->

    </div> <!-- FIN Seccion 1-->

  </div>

